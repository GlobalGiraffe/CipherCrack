<?xml version="1.0"?>
<LinearLayout
    tools:context="mnh.game.ciphercrack.ResultActivity"
    android:id="@+id/result_controls"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/black_overlay"
    android:orientation="vertical"
    android:padding="6sp"
    android:fitsSystemWindows="true"
    android:theme="@style/CrackTheme"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/result_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:theme="@style/Crack.Toolbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    <TextView
        android:id="@+id/result_input_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@drawable/entry_text_border"
        android:padding="10sp"
        android:textColor="@color/entry_text_text"
        android:textIsSelectable="true"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/result_result_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@drawable/result_text_border"
        android:padding="10sp"
        android:textColor="@color/result_text_text"
        android:textIsSelectable="true"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/result_explain_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@drawable/result_text_border_mid"
        android:padding="10sp"
        android:textColor="@color/explain_text_text"
        android:textIsSelectable="true"
        android:textSize="14sp" />
</LinearLayout>
