<?xml version="1.0"?>
<FrameLayout tools:context="mnh.game.ciphercrack.CrackActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:theme="@style/Theme.AppCompat"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/crack_controls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="clip_vertical"
        android:background="@color/black_overlay"
        android:orientation="vertical"
        android:padding="6sp"
        tools:ignore="UselessParent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/crack_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <EditText
            android:id="@+id/crack_inputtext"
            android:layout_width="match_parent"
            android:hint="@string/entry_text_hint"
            android:importantForAutofill="no"
            android:textColorHint="#50A0F0"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/entrytext_border"
            android:gravity="top|start"
            android:inputType="textMultiLine|textNoSuggestions"
            android:padding="10sp"
            android:scrollIndicators="right"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:textColor="@color/entrytext_text"
            android:textIsSelectable="true"
            android:textSize="16sp" />

        <!-- this is where we programmatically put the extra controls for each cipher type -->
        <LinearLayout
            android:id="@+id/crack_extra_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="vertical"
            tools:ignore="UselessParent" />

