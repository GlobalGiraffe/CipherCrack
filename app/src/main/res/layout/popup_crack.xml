<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/popup_crack_main_layout"
    android:layout_height="400dp"
    android:layout_width="200dp"
    android:orientation="vertical"
    android:theme="@style/CrackTheme"
    tools:context="mnh.game.ciphercrack.HomeActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/popup_crack_cribs_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="@string/cribs"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/popup_crack_cribs"
            android:hint="@string/cribs"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:importantForAutofill="no"
            android:textColor="@color/entry_text_text"
            android:background="@drawable/entry_text_border"
            android:inputType="textNoSuggestions"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/popup_crack_extra_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/popup_crack_button_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        style="?android:attr/buttonBarStyle"
        android:orientation="horizontal">
        <Button
            android:id="@+id/popup_crack_button_cancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="8dp"
            android:text="@string/cancel"/>
        <Button
            android:id="@+id/popup_crack_button_crack"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="8dp"
            android:text="@string/crack"/>
    </LinearLayout>
</LinearLayout>