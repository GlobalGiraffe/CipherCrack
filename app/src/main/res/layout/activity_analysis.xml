<?xml version="1.0"?>
<FrameLayout
    tools:context="mnh.game.ciphercrack.AnalysisActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:theme="@style/CrackTheme"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/static_general_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent"
        android:padding="6sp"
        android:orientation="vertical"
        android:layout_gravity="start">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/static_analysis_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="4dp"
            android:theme="@style/Crack.Toolbar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent"
            android:padding="0sp"
            android:orientation="vertical"
            android:id="@+id/static_general_inner_layout">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/static_analysis_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="scrollable"/>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/static_analysis_pager"
                android:layout_width="match_parent"
                android:layout_marginBottom="56dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>